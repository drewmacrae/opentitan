package(default_visibility = ["//visibility:public"])

exports_files(glob(["**"]))

genrule(
    name = "openocd",
    outs = ["openocd.sh"],
    cmd = """
    echo '#!/bin/bash' > $@
    echo './$(location @openocd//:openocd_bin) $$@' >> $@
    """,
    executable = True,
    tools = ["@openocd//:openocd_bin"],
)
